<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="4dp"
    android:background="@drawable/corner_radius"
    card_view:cardBackgroundColor="#FFFFFF"
    card_view:cardCornerRadius="20dp"
    card_view:cardElevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/border"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/corner_radius"
        android:backgroundTint="#FD9A9A"
        android:backgroundTintMode="screen"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toTopOf="parent">


        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/gambarcard1"
            android:layout_width="136dp"
            android:layout_height="118dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#FFFFFF"
            android:src="@drawable/img1"
            card_view:civ_border_color="#5C5C5C"
            card_view:civ_border_width="3dp"
            card_view:civ_shadow="true"
            card_view:civ_shadow_color="#7A7A7A"
            card_view:civ_shadow_radius="5dp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtUsernameList1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/aladin"
            android:text="Textview"
            android:textColor="#000000"
            android:textSize="24sp"
            card_view:layout_constraintStart_toEndOf="@+id/gambarcard1"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtNameList1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="17dp"
            android:layout_marginTop="18dp"
            android:fontFamily="@font/aladin"
            android:text="TextView"
            android:textColor="#000000"
            android:textSize="18sp"
            card_view:layout_constraintStart_toEndOf="@+id/gambarcard1"
            card_view:layout_constraintTop_toBottomOf="@+id/txtUsernameList1" />

        <ImageView
            android:id="@+id/imgunFav"
            android:layout_width="48dp"
            android:layout_height="41dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="24dp"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:srcCompat="@drawable/heartwhite" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>