<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:backgroundTint="#f2f2f2"
    tools:context=".SettingActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imgDProfile2"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:background="#FFFFFF"
            android:contentDescription="profile pictur"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/githubuniverse" />

        <ImageView
            android:id="@+id/imgback2"
            android:layout_width="39dp"
            android:layout_height="37dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="14dp"
            android:contentDescription="back"
            app:srcCompat="@drawable/ic_baseline_arrow_back_ios_24" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:background="@drawable/corner_top1"
        android:backgroundTint="#f2f2f2"
        android:orientation="vertical"
        android:paddingTop="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="81dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/notification" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/aladin"
            android:paddingLeft="10dp"
            android:text="Notification"
            android:textColor="#000000"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/aladin"
            android:paddingLeft="75dp"
            android:paddingBottom="20dp"
            android:text="Reminder"
            android:textColor="#000000"
            android:textSize="36sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="65dp"
                android:layout_height="85dp"
                android:layout_weight="1"
                android:background="#C7F6E3"
                android:backgroundTint="#00FF96"
                app:srcCompat="@drawable/ic_baseline_check_circle_outline_24" />

            <TextView
                android:id="@+id/txtDcompany2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/aladin"
                android:paddingLeft="10dp"
                android:paddingTop="25dp"
                android:text="Stay in Touch with Us"
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:textSize="25sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="33dp"
                android:layout_height="81dp"
                android:background="#FFC6C6"
                app:srcCompat="@drawable/ic_baseline_notifications_active_24" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/aladin"
                android:paddingLeft="10dp"
                android:paddingTop="25dp"
                android:text="Reminds at 9:00 AM"
                android:textColor="#000000"
                android:textSize="24sp" />

            <Switch
                android:id="@+id/switchNotif"
                android:layout_width="104dp"
                android:layout_height="81dp"
                android:layout_weight="1"
                android:textAlignment="viewEnd"
                android:textSize="36sp"
                android:thumbTint="#E38D8D" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>